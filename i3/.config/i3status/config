# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "ipv6"
#order += kdeconnector
#order += uname
order += scratchpad
order += arch_updates
order += "disk /"
order += "disk /home"
#order += "run_watch DHCP"
#order += "run_watch VPN"
#order += "wireless _first_"
order += online_status
order += "ethernet _first_"

order += "sysdata"
order += "load"
order += volume_status
order += "tztime local"

#kdeconnector {
#  device = "OnePlus"
#}

arch_updates {
  include_aur = true
  format = "Updates: {pacman}/{aur}"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load: %1min"
}

disk "/" {
        format = "/: %avail avail."
}

disk "/home" {
        format = "/home: %avail avail."
}
